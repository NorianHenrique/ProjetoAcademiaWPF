<Page x:Class="ProjetoAcademiaWPF.View.PageAulas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoAcademiaWPF.View"
      xmlns:resources="clr-namespace:ProjetoAcademiaWPF.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="800"
      Title="PageAulas">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Image Source="/icon7.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <Label Content="{x:Static resources:Idioma.tituloCadastrarAula}" FontSize="16" Foreground="#FFFFFEFE" FontWeight="Bold"/>
            </StackPanel>
            <Label Content="{x:Static resources:Idioma.labelID}" FontWeight="Bold" Foreground="#FFEFEFEF"/>
            <TextBox IsTabStop="False" x:Name="txtIDAula" Width="760" Margin="0,0,0,10" IsReadOnly="True"/>

            <Button TabIndex="0" x:Name="btnSalvar" Content="{x:Static resources:Idioma.txtSalvar}" Margin="0,20,0,0" 
                    Background="#FF0B8C07" Foreground="White" FontSize="14" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>
